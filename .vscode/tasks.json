{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "DEV",
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "dependsOn": [
                "main",
                "renderer"
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "dependsOrder": "parallel"
        },
        {
            "label": "main",
            "type": "npm",
            "path": "package.json",
            "script": "start-main"
        },
        {
            "label": "renderer",
            "type": "npm",
            "path": "package.json",
            "script": "start-renderer"
        }
    ]
}